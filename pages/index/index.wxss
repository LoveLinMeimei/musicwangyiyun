/* pages/index/index.wxss */
/* 轮播图 */
.banner {
  height: 248rpx;
}
.banner-item {
  height: 100%;
  text-align: center;
}
.banner .img {
  height: 100%;
  width: 95%;
  border-radius: 10rpx;
}
/* /轮播图 */

/*导航 */
.navContainer {
  display: flex;
  justify-content: space-around;
}
.navContainer .navContainer-item {
  text-align: center;
  margin: 20rpx;
}
.navContainer .navContainer-item .navContainer-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f60c15;
  color: #fff;
}
.navContainer .navContainer-item .navContainer-text {
  font-size: 26rpx;
}
/* /导航 */

/* 推荐歌曲 */
.recommend {
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.reContent {
  display: flex;
  height: 300rpx;
}
.reContent-item {
  margin: 10rpx;
}
.reContent-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}
.reContent-text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
/* /推荐歌曲 */

/* 排行榜区域 */
.topList {
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.topListSwiper {
  height: 400rpx;
}
.topList.swiperItem {
  width: 96%;
  background: #fbfbfb;
}
.topList .topListSwiper .title {
  font-size: 30rpx;
  line-height: 30rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.topList .musicItem {
  display: flex;
  margin-bottom: 10rpx;
}
.topList .musicImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}
.topList .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.topList .musicName {
  font-size: 30rpx;
  line-height: 100rpx;
  min-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* /排行榜区域 */