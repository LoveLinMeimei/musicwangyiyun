.personalHeader {
  position: relative;
  height: 520rpx;
  padding: 100rpx 30rpx 0;
}
.personalHeader .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7;
}
.personalHeader .user-info-box {
  position: absolute;
  left: 49rpx;
  bottom: 350rpx;
  display: flex;
  align-items: center;
}
.avatar-wrap .avatar {
  width: 140rpx;
  height: 140rpx;
  border: 4px solid #fff;
  border-radius: 50%;
  margin-right: 30rpx;
}
.vip-cart-wrap {
  position: relative;
  height: 280rpx;
  color: #f7d680;
  background: rgba(0, 0, 0, .7);
  margin-top: 190rpx;
}
.card-bg {
  position: absolute;
  width: 380rpx;
  height: 260rpx;
  top: 20rpx;
  right: 0rpx;
}
.vip-btn {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 120rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  background-color: #7c6b40;
  border: 1rpx solid 
  #7c6b40;
  border-radius: 30rpx;
}
.tit {
  font-size: 22rpx;
  margin-bottom: 28rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
}
.tit .iconfont {
  font-size: 20rpx;
  margin-right: 10rpx;
}

.e-m {
  font-size: 34rpx;
  margin-top: 10rpx;
  padding-left: 20rpx;
}
.e-b {
  font-size: 24rpx;
  margin-top: 10rpx;
  padding-left: 20rpx;
}
.cover-container {
  position: relative;
  top: -145rpx;
  background-color: #f5f5f5;
  height: 600rpx;
}
.cover-container .arc {
  position: absolute;
  height: 60rpx;
  top: -38rpx;
  width: 100%;
}
.cover-container .nav-section {
  background-color: #fff;
  height: 144rpx;
  margin: 0rpx 20rpx;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
}
.nav-section .nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  font-size: 30rpx;
}
.nav-item .iconfont {
  color: #d43c33;
  font-size: 36rpx;
  margin-bottom: 6rpx;
}
.personalContent {
  margin: 20rpx;
  background-color: #fff;
  padding: 0rpx 10rpx;
}
.personalContent .recentPlayContainer {
  /* height: 122rpx; */
  border-bottom: 1px solid #eee;
}
.recentPlayContainer .title {
  font-size: 30rpx;
  height: 66rpx;
  line-height: 66rpx;
}
.recentPlayContainer .recentScroll {
  display: flex;
  height: 220rpx;
}
.recentPlayContainer .recentItem {
  margin-right: 12rpx;
}
.recentPlayContainer .recentImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.cardList .card-item {
  height: 100rpx;
  border-bottom: 1px solid #eee;
  line-height: 100rpx;
}
.card-item .title {
  font-size: 28rpx;
  color: #333;
}
.card-item .more {
  float: right;
  color: #333;
  font-size: 30rpx;
}