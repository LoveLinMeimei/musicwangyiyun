.header {
  margin-top: 5rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.input-view {
  flex: 1;
  margin: 0rpx 15rpx;
  position: relative;
}
.header .input {
  padding-left: 50rpx;
  border-radius: 20rpx;
  background-color: #e8e8e8;
  height: 60rpx;
}
.header .iconfont {
  position: absolute;
  left: 8rpx;
  top: 15rpx;
}
.header .delSearchContent {
  z-index: 10;
  position: absolute;
  right: 21rpx;
  top: 6rpx;
  width: 60rpx;
  height: 60rpx;
  text-align: right;
}
.placeholderClass {
  font-size: 28rpx;
}
.cancle {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
}

/* 搜索结果列表 */
.searchResultWrap {
  padding: 20rpx;
  margin-top: 10rpx;
}
.searchResultItem {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}
.searchResultItem .iconfont {
  font-size: 36rpx;
}
.searchResultItem .text {
  flex: 1;
  font-size: 28rpx;
  margin-left: 15rpx;
  border-bottom: 1px solid #ccc;
}
/* 搜索历史 */
.hisWrap {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}
.hisbtn {
  width: 120rpx;
  height: 48rpx;
  background-color: rgba(255, 255, 255, 0.1);
  text-align: center;
}
.histext {
  font-size: 28rpx;
  border-radius: 20rpx;
  text-align: center;
}
.hisWrap .iconfont {
  background-color: #fff;
  text-align: center;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  opacity: 0.5;
}
.hisWrap .hisScrollView {
  display: flex;
  flex: 1;
  white-space: nowrap;
  width: calc(100vw - 200rpx);
  height: 60rpx;
  line-height: 60rpx;
}
.hisScrollView .hisItem {
  margin-right: 10rpx;
  margin-left: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  background-color: rgba(236, 232, 232, 0.4);
  border-radius: 20rpx;
  font-size: 28rpx;
}

/* 热搜榜 */
.hotListWrap {
  padding: 40rpx 20rpx;
}
.hotListHeader {
  padding-bottom: 14rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
}
.hotList {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}
.hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.hotItem .num {
  margin-right: 10rpx;
}
.hotItem .img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
