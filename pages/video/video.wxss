.viewContainer {
  padding-left: 30rxp;
  padding-right: 30rpx;
  width: 100%;
}
.viewContainer .search {
  height: 92rpx;
}
.viewContainer .search {
  display: flex;
  margin-top: 5rpx;
}
.viewContainer .search .search-img {
  width: 66rpx;
  height: 66rpx;
}
.viewContainer .search .search-btn {
  background-color: #fff;
  flex: 1;
  height: 66rpx;
  line-height: 66rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #d43c33;
}

.scrollView-wrap {
  display: flex;
  flex: 1;
  white-space: nowrap;
  height: 60rpx;
  padding-left: 10rpx;
}
.scrollView-wrap .srollViewItem {
  margin-right: 50rpx;
  font-size: 30rpx;
}
.srollViewItem .active {
  border-bottom: 3rpx solid #d43b33;
  padding-bottom: 12rpx;
}
.videoGroup-scroll {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  height: calc(100vh - 152rpx);
}
.videoGroup-scroll .videoGroup-item {
  padding: 0 3%;
  margin: 10rpx 0rpx;
}
/* .videoGroup-scroll .video {
  width: 100%;
} */
.videoGroup-scroll .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}


.videoGroup-item .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}